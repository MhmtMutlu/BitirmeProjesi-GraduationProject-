<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bitirme App</title>
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/modules/bootstrap/dist/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    @RenderSection("Css", false)
    <script src="https://kit.fontawesome.com/d3040de4bc.js" crossorigin="anonymous"></script>
</head>
<body class="d-flex flex-column min-vh-100">

    @await Html.PartialAsync("_navbar")
    
    <main class="my-4">
        <div class="container" style="margin-top: 100px;">
            
            @if (TempData["message"] != null)
            {
                <partial name="_ResultMessage" model="@(TempData.Get<AlertMessage>("message"))" />
            }
            @RenderBody() 
        </div>
    </main>

    <footer class="py-5 text-white text-center mt-auto">
        Nuh Naci Yazgan Üniversitesi | 2020 | Mehmet Mutlu
    </footer>

    
    @RenderSection("Scripts", false)
</body>
</html>