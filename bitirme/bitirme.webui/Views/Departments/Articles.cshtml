@model DepartmentModel

<div class="row">
    <div class="col-md-6">
        <h3 class="h1">Makaleler</h3>
        @if (Model.Articles.Count() > 0)
        {
            <div class="list-group list-group-flush">
                @foreach (var article in Model.Articles)
                {
                    <a href="/admin/articledetails/@article.ArticleId" class="list-group-item list-group-item-action list-group-item-secondary mb-1">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@article.Author</h5>
                        </div>
                        <hr>
                        <p class="mb-1">@article.Title</p> 
                    </a>
                }
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                <h3>Henüz makale eklenmemiş.</h3>
            </div>
        }
    </div>
</div>