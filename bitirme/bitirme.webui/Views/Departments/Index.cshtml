@model DepartmentListViewModel

<div class="text-center">
    <h3 class="h1">Okulumuzun Bölümleri</h3>
    <hr>
    <p>Bölümünüzün sayfasına gitmek için aşağıdaki kutucuklardan seçim yapabilirsiniz.</p>
    <hr>
</div>

<div class="row mt-3">
    <div class="col-md-12">
        <div class="row">
            @foreach (var department in Model.Departments)
            {
                <div class="col-md-3">
                    <div class="card mb-3"  style="height: 350px;">
                        <img src="~/images/@department.ImageUrl" alt="" class="card-img-top" style="height: 160px;">
                        <div class="card-body">
                            <h5 class="card-title">@department.Name</h5>
                        </div>
                        <div class="card-footer text-center">
                            <a href="/departments/lessons/@department.DepartmentId" class="btn btn-secondary btn-sm btn-block"> Dersler </a>
                            <a href="/departments/articles/@department.DepartmentId" class="btn btn-secondary btn-sm btn-block"> Makaleler </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>