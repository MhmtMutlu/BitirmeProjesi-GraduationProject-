@model DepartmentModel

<div class="row">
    <div class="col-md-6">
        <h3 class="h1">Dersler</h3>
        @if (Model.Lessons.Count() > 0)
        {
           <div class="list-group list-group-flush">
                @foreach (var lesson in Model.Lessons)
                {
                    <a href="/lesson/index/@lesson.LessonId" class="list-group-item list-group-item-action list-group-item-secondary mb-1">
                        @lesson.Name
                    </a>
                }
            </div> 
        }
        else
        {
            <div class="alert alert-warning">
                <h3>Henüz ders eklenmemiş.</h3>
            </div>
        }
        
    </div>
</div>